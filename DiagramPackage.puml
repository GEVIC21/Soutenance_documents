@startuml

package "Front-End" {
    component VueApp {
        [UserInterface]
        [Router]
        [State Management]
    }
}

package "Back-End" {
    component LaravelAPI {
        [AuthController]
        [ProductController]
        [OrderController]
        [Middleware]
        [Service Layer]
    }
}

database MySQL {
    [UserTable]
    [ProductTable]
    [OrderTable]
    [AddressTable]
}

package "External Services" {
    component "Payment Gateway" {
        [Stripe API]
    }
    component "Email Service" {
        [SMTP Server]
    }
}

' Connexions et interactions
VueApp --> LaravelAPI : "RESTful HTTP Requests"
LaravelAPI --> MySQL : "Read/Write SQL Queries"
LaravelAPI --> "Payment Gateway" : "Process Payments"
LaravelAPI --> "Email Service" : "Send Email Notifications"

@enduml
